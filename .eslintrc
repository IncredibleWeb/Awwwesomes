{
  "extends": "standard",
  "env": {
    "browser": true,
    "mocha": true,
    "node": false
  },
  "globals": {
    "document": true,
    "window": true,
    "module": true
  },
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": ["error", "never"],
    "indent": ["error", 4]
  }
}
